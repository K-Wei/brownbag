<div class="page-header">
  <h1>
    Events
    <a href="/events/new" class="btn btn-lg btn-success">New Event</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "events_filters" do |f| %>
    <p class="lead">Narrow results:</p>

    <div class="form-group">
      <%= f.label :intent_cont, "Intent contains" %>
      <%= f.text_field :intent_cont, :class => "form-control", :placeholder => "Intent contains" %>
    </div>

    <div class="form-group">
      <%= f.label :capacity_limit, "Capacity limit" %>
      <div class="row">
        <div class='col-md-6 mb-1'>
          <%= f.text_field :capacity_limit_gteq, :class => "form-control", :placeholder => "Capacity limit greater than or equal to" %>
        </div>
        <div class='col-md-6'>
          <%= f.text_field :capacity_limit_lteq, :class => "form-control", :placeholder => "Capacity limit less than or equal to" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :available_eq, "Available" %>
      <div>
        <label class="radio-inline">
          <%= f.radio_button :available_eq, "1", checked: ((params[:q] && params[:q][:available_eq]) == "1" ? "checked" : "") %> Yes
        </label>
        <label class="radio-inline">
          <%= f.radio_button :available_eq, "0", checked: ((params[:q] && params[:q][:available_eq]) == "0" ? "checked" : "")%> No
        </label>
        <label class="radio-inline">
          <%= f.radio_button :available_eq, ""%> Either
        </label>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :end_time, "End tme" %>
      <div class="row">
        <div class='col-md-6 mb-1'>
          <div class='input-group date' id='end_timegteqPicker'>
            <%= f.text_field :end_time_gteq, :class => "form-control", :placeholder => "End tme greater than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
            </span>
            <script type="text/javascript">
            $(function () {
              $('#end_timegteqPicker').datetimepicker({
                format: 'LT'
              });
            });
            </script>
          </div>
        </div>
        <div class='col-md-6'>
          <div class='input-group date' id='end_timelteqPicker'>
            <%= f.text_field :end_time_lteq, :class => "form-control", :placeholder => "End tme less than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
            </span>
            <script type="text/javascript">
            $(function () {
              $('#end_timelteqPicker').datetimepicker({
                format: 'LT'
              });
            });
            </script>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :start_time, "Start time" %>
      <div class="row">
        <div class='col-md-6 mb-1'>
          <div class='input-group date' id='start_timegteqPicker'>
            <%= f.text_field :start_time_gteq, :class => "form-control", :placeholder => "Start time greater than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
            </span>
            <script type="text/javascript">
            $(function () {
              $('#start_timegteqPicker').datetimepicker({
                format: 'LT'
              });
            });
            </script>
          </div>
        </div>
        <div class='col-md-6'>
          <div class='input-group date' id='start_timelteqPicker'>
            <%= f.text_field :start_time_lteq, :class => "form-control", :placeholder => "Start time less than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
            </span>
            <script type="text/javascript">
            $(function () {
              $('#start_timelteqPicker').datetimepicker({
                format: 'LT'
              });
            });
            </script>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :event_date, "Event date" %>
      <div class="row">
        <div class='col-md-6 mb-1'>
          <div class='input-group date' id='event_dategteqPicker'>
            <%= f.text_field :event_date_gteq, :class => "form-control", :placeholder => "Event date greater than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>

        <div class='col-md-6'>
          <div class='input-group date' id='event_datelteqPicker'>
            <%= f.text_field :event_date_lteq, :class => "form-control", :placeholder => "Event date less than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript">
    $(function () {
      $('#event_dategteqPicker').datetimepicker({
        format: 'MM/DD/YYYY'
      });
      $('#event_datelteqPicker').datetimepicker({
        useCurrent: false,
        format: 'MM/DD/YYYY'
      });
      $('#event_dategteqPicker').on("dp.change", function (e) {
        $('#event_datelteqPicker').data("DateTimePicker").minDate(e.date);
      });
      $('#event_datelteqPicker').on("dp.change", function (e) {
        $('#event_dategteqPicker').data("DateTimePicker").maxDate(e.date);
      });
    });
    </script>

    <div class="form-group">
      <%= f.label :description_cont, "Description contains" %>
      <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
    </div>

    <div class="form-group">
      <%= f.label :title_cont, "Title contains" %>
      <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
    </div>

    <div class="form-group">
      <%= f.label :host_cont, "Host contains" %>
      <%= f.text_field :host_cont, :class => "form-control", :placeholder => "Host contains" %>
    </div>

    <div class="form-group">
      <%= f.label :created_at, "Created at" %>
      <div class="row">
        <div class='col-md-6 mb-1'>
          <div class='input-group date' id='created_atgteqPicker'>
            <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>

        <div class='col-md-6'>
          <div class='input-group date' id='created_atlteqPicker'>
            <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
            <span class="input-group-addon">
              <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript">
    $(function () {
      $('#created_atgteqPicker').datetimepicker({
        format: 'YYYY-MM-DD hh:mm:SS'
      });
      $('#created_atlteqPicker').datetimepicker({
        useCurrent: false,
        format: 'YYYY-MM-DD hh:mm:SS'
      });
      $('#created_atgteqPicker').on("dp.change", function (e) {
        $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
      });
      $('#created_atlteqPicker').on("dp.change", function (e) {
        $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
      });
    });
    </script>

    <div class="form-group">
      <%= f.label :user_email_cont, "User email contains" %>
      <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

    <div class="form-group">
      <%= f.label :restaurant_name_cont, "Restaurant name contains" %>
      <%= f.text_field :restaurant_name_cont, :class => "form-control", :placeholder => "Restaurant name contains" %>
    </div>

    <div class="form-group">
      <%= f.label :commenters_email_cont, "User email contains" %>
      <%= f.text_field :commenters_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

    <div class="form-group">
      <%= f.label :attendees_email_cont, "User email contains" %>
      <%= f.text_field :attendees_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

    <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

    <a href="/events" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#events_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Host</th>
        <th>Restaurant</th>
        <th>Title</th>
        <th>Event date</th>
        <th>Start time</th>
        <th>End time</th>
        <th>Capacity</th>
        <th>Actions</th>
      </tr>

      <% @events.each do |event| %>
      <tr>
        <td>
          <a href="/users/<%= event.user.id %>">
            <%= event.host %>
          </a>
        </td>
        <td>
          <a href="/restaurants/<%= event.restaurant.id %>">
            <%= event.restaurant.name %>
          </a>
        </td>
        <td>
          <a href="/events/<%= event.id %>">
            <%= event.title %>
          </a>
        </td>
        <td><%= event.event_date %></td>
        <td><%= event.start_time.strftime("%l:%M %P") %></td>
        <td><%= event.end_time.strftime("%l:%M %P") %></td>
        <td><%= event.invitations_count %> / <%= event.capacity_limit %></td>
        <td>
          <a href="/events/<%= event.id %>" class="btn btn-primary">Details</a>

          <% if current_user == event.user %>
          <a href="/events/<%= event.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @events, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
