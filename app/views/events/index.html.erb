<div class="page-header">
  <h1>
    Events
    <a href="/events/new" class="btn btn-lg btn-success">New Event</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Restaurant</th>
        <th>Host</th>
        <th>Title</th>
        <th>Description</th>
        <th>Event date</th>
        <th>Start time</th>
        <th>End tme</th>
        <th>Available</th>
        <th>Capacity limit</th>
        <th>Intent</th>
        <th>Actions</th>
      </tr>

      <% @events.each do |event| %>
      <tr>
        <td><%= event.user.email %></td>
        <td><%= event.restaurant_id %></td>
        <td><%= event.host %></td>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.event_date %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_tme %></td>
        <td><%= event.available %></td>
        <td><%= event.capacity_limit %></td>
        <td><%= event.intent %></td>
        <td>
          <a href="/events/<%= event.id %>" class="btn btn-primary">Show</a>
          <a href="/events/<%= event.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
