<div class="page-header">
  <h3><%= @event.title %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt>Host</dt>
      <dd><%= @event.host %></dd>

      <dt>Restaurant</dt>
      <dd>
          <a href="/restaurants/<%= @event.restaurant_id %>">
            <%= @event.restaurant.name %>
          </a>
      </dd>

      <dt>Event date</dt>
      <dd><%= @event.event_date.strftime("%D") %></dd>

      <dt>Start time</dt>
      <dd><%= @event.start_time.strftime("%l:%M %P") %></dd>

      <dt>End tme</dt>
      <dd><%= @event.end_time.strftime("%l:%M %P") %></dd>

      <dt>Description</dt>
      <dd><%= @event.description %></dd>

      <dt>Capacity</dt>
      <dd><%= @event.reservations_count %> / <%= @event.capacity_limit %></dd>

      <dt>Intent</dt>
      <dd><%= @event.intent %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/events" class="btn btn-primary">
        Back
      </a>
      <% if current_user == @event.user %>
        <a href="/events/<%= @event.id %>/edit" class="btn btn-warning">
          Edit
        </a>
        <a href="/delete_event/<%= @event.id %>" class="btn btn-danger" rel="nofollow">
          Delete
        </a>
      <% end %>
    </div>
  </div>
</div>

<% if current_user.present? %>
<!-- A Event has many comments -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Write a comment (publically visible)
      </li>

      <% @event.comments.each do |comment| %>
        <li class="list-group-item">
          <a href="/comments/<%= comment.id %>">
            <%= comment.body %>
          </a>

          <% if current_user == comment.user %>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
          <% elsif current_user == @event.user %>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
          <% end %>

        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_comment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for event_id -->
      <input type="hidden" name="event_id" value="<%= @event.id %>">

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-success">
        Create Comment
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Event has many reservations -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Reservations
      </li>

      <% @event.reservations.each do |reservation| %>
        <li class="list-group-item">
          <a href="/reservations/<%= reservation.id %>">
            <%= reservation.user_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/reservations/<%= reservation.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/reservations/<%= reservation.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_reservation/<%= reservation.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_reservation" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email), :class => "form-control") %>
      </div>

      <!-- Label and input for event_id -->
      <input type="hidden" name="event_id" value="<%= @event.id %>">

      <!-- Label and input for confirmed -->
      <div class="checkbox">
        <label for="confirmed">
          <input type="checkbox" id="confirmed" name="confirmed" value="1" <%= "checked" if @reservation.confirmed %>>
          Confirmed reservation
        </label>
      </div>

      <!-- Label and input for host_approval -->
      <div class="checkbox">
        <label for="host_approval">
          <input type="checkbox" id="host_approval" name="host_approval" value="1" <%= "checked" if @reservation.host_approval %>>
          Host approval
        </label>
      </div>

      <!-- Label and input for guest_approval -->
      <div class="checkbox">
        <label for="guest_approval">
          <input type="checkbox" id="guest_approval" name="guest_approval" value="1" <%= "checked" if @reservation.guest_approval %>>
          Guest approval
        </label>
      </div>

      <!-- Label and input for public_request -->
      <div class="checkbox">
        <label for="public_request">
          <input type="checkbox" id="public_request" name="public_request" value="1" <%= "checked" if @reservation.public_request %>>
          Public request
        </label>
      </div>

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"></textarea>
      </div>

      <button class="btn btn-block btn-success">
        Create Reservation
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>

<!-- A Event has many attendees -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Attendees
      </li>

      <% @event.attendees.each do |user| %>
        <li class="list-group-item">
          <a href="/users/<%= user.id %>">
            <%= user.email %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/users/<%= user.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/users/<%= user.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_user/<%= user.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<% end %>
