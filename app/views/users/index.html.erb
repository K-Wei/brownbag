<div class="page-header">
  <h1>
    BrownBag Connections
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Profile picture</th>
        <th>Name</th>
        <th>Title</th>
        <th>Company</th>
        <th>Linkedin</th>
      </tr>

      <% @users.each do |user| %>
      <tr>
        <td><img src='<%= user.profile_picture %>' class='img-responsive'></td>
        <td><a href="/users/<%= user.id %>"><%= user.first_name.capitalize + " " + user.last_name[0].capitalize %></a></td>
        <td><%= user.title %></td>
        <td><%= user.company %></td>
        <td>
          <a href="<%= user.linkedin_url %>">
            <img src="https://static.licdn.com/scds/common/u/img/webpromo/btn_liprofile_blue_80x15.png" class="img-responsive">
          </a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
