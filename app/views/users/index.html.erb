<div class="page-header">
  <h1>
    BrownBag Network
  </h1>
</div>


<% @users.each do |user| %>
<div class="col-md-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div style="text-align:center">
        <a href="/users/<%= user.id %>" align="center">
          <%= user.first_name.capitalize + " " + user.last_name.capitalize %>
        </a>
      </div>
    </div>
    <div class="panel-body" style>
      <div style="text-align:center">
        <a href="/users/<%= user.id %>">
          <img src='<%= user.profile_picture %>' class="img-responsive">
        </a>
        <p><%= user.title + " at " + user.company %></p>
        <p class="text-center">
          <a href="<%= user.linkedin_url %>" style="display:block; text-align:center; text-align:-webkit-center">
            <img src="https://static.licdn.com/scds/common/u/img/webpromo/btn_liprofile_blue_80x15.png" class="img-responsive">
          </a>
        </p>
      </div>
    </div>
  </div>
</div>
<% end %>
