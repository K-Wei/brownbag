<div class="page-header">
  <h3>My Events</h3>
</div>


<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">

      <% @myattendedevents.each do |invitation| %>

      <div class="panel-heading">
        <h3 class="panel-title">
          <a href="/users/<%= invitation.event.user_id %>"> <%= invitation.user %></a>
          <small>
            Created <%= time_ago_in_words(invitation.event.created_at) %> ago
          </small>
        </h3>
      </div>

      <div class="panel-body">
        <a href="/events/<%= invitation.event.id %>">
          <img src="<%= invitation.event.image %>" class="img-responsive">
        </a>
        <p>
        </p>
        <ul class="media-list">
          <li class="media">
            <div class="media-body">
              <h6 class="media-heading">
                <a href="/users/<%= invitation.event.user_id %>"><%= invitation.event.user.username %></a>
                <small>
                  Over <%= time_ago_in_words(invitation.event.created_at) %> ago
                </small>
              </h6>
              <p> <%= invitation.event.caption %></p>
            </div>
          </li>
        </ul>
      </div>
      <% end %>

    </div>

  </div>
</div>
